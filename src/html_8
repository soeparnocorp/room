  <script>
    // ===== GLOBAL =====
    let currentWebSocket = null;
    let username = '';
    let roomname = '';
    let avatarBase64 = localStorage.getItem('readtalk_avatar') || '';

    // DOM elements
    const nameForm = document.getElementById('name-form');
    const nameInput = document.getElementById('name-input');
    const roomNameInput = document.getElementById('room-name-input');
    const goPublic = document.getElementById('go-public');
    const goPrivate = document.getElementById('go-private');
    const roomPanel = document.getElementById('room-panel');
    const currentRoomSpan = document.getElementById('current-room');
    const onlineUsersList = document.getElementById('online-users-list');
    const offlineUsersList = document.getElementById('offline-users-list');
    const onlineCount = document.getElementById('online-count');
    const settingsBtn = document.getElementById('settings-btn');
    const profileModal = document.getElementById('profile-modal');
    const closeModalBtn = document.getElementById('close-modal-btn');
    const cancelModal = document.getElementById('cancel-modal');
    const saveProfile = document.getElementById('save-profile');
    const modalName = document.getElementById('modal-name');
    const modalStatus = document.getElementById('modal-status');
    const modalAbout = document.getElementById('modal-about');
    const modalEmail = document.getElementById('modal-email');
    const modalAvatarPreview = document.getElementById('modal-avatar-preview');
    const changeAvatarBtn = document.getElementById('change-avatar-btn');
    const modalAvatarUpload = document.getElementById('modal-avatar-upload');
    const startChatBtn = document.getElementById('start-chat-btn');

    // Avatar elements (main form)
    const avatarPreview = document.getElementById('avatar-preview');
    const avatarImage = document.getElementById('avatar-image');
    const avatarPlaceholder = document.getElementById('avatar-placeholder');
    const avatarUpload = document.getElementById('avatar-upload');

    let hostname = window.location.host;
    if (!hostname) hostname = 'localhost:8787';

    // ===== LOAD SAVED DATA =====
    const savedUsername = localStorage.getItem('readtalk_username');
    if (savedUsername) nameInput.value = savedUsername;
    if (avatarBase64) {
      avatarImage.src = avatarBase64;
      avatarImage.style.display = 'block';
      avatarPlaceholder.style.display = 'none';
      modalAvatarPreview.src = avatarBase64;
    }

    // ===== AVATAR UPLOAD (MAIN FORM) =====
    avatarUpload.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (ev) => {
          avatarBase64 = ev.target.result;
          avatarImage.src = avatarBase64;
          avatarImage.style.display = 'block';
          avatarPlaceholder.style.display = 'none';
          localStorage.setItem('readtalk_avatar', avatarBase64);
          modalAvatarPreview.src = avatarBase64;
        };
        reader.readAsDataURL(file);
      }
    });

    // ===== HASH HANDLING =====
    if (window.location.hash.length > 1) {
      roomname = window.location.hash.slice(1);
      roomNameInput.value = roomname;
      roomNameInput.disabled = true;
    } else {
      roomNameInput.disabled = false;
    }

    // ===== GO BUTTON =====
    goPublic.addEventListener('click', () => {
      username = nameInput.value.trim();
      roomname = roomNameInput.value.trim() || window.location.hash.slice(1);

      if (!username) { alert('Enter your name'); nameInput.focus(); return; }
      if (!roomname) { alert('Enter room name'); roomNameInput.focus(); return; }

      roomname = roomname.replace(/[^a-zA-Z0-9_-]/g, '').toLowerCase();
      if (roomname.length > 32) { alert('Max 32 chars'); return; }

      localStorage.setItem('readtalk_username', username);
      if (avatarBase64) localStorage.setItem('readtalk_avatar', avatarBase64);

      window.location.hash = roomname;
      startRoomPanel();
    });

    // ===== PRIVATE ROOM (DEMO) =====
    goPrivate.addEventListener('click', () => {
      alert('Private room feature will be connected to OpenAuth later.');
    });

    roomNameInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') { e.preventDefault(); goPublic.click(); }
    });

    // ===== START ROOM PANEL (USERBASED) =====
    function startRoomPanel() {
      nameForm.style.display = 'none';
      roomPanel.style.display = 'flex';
      currentRoomSpan.textContent = roomname;

      // Load data ke modal
      modalName.value = username;
      modalAbout.value = localStorage.getItem('readtalk_about') || '';
      modalStatus.value = localStorage.getItem('readtalk_status') || 'online';
      modalEmail.value = localStorage.getItem('readtalk_email') || '';
      updateCharCount();

      // Connect WebSocket ke inbox user (1 user 1 DO)
      connectWebSocket();

      // Simulasi online users (nanti dari WebSocket)
      // Untuk demo, tampilkan user sendiri dulu
      updateUsersList([{
        name: username,
        status: 'online',
        about: modalAbout.value || 'Hello!',
        avatar: avatarBase64
      }]);
    }

    // ===== WEBSOCKET (1 USER 1 DO) =====
    function connectWebSocket() {
      const wss = document.location.protocol === 'http:' ? 'ws://' : 'wss://';
      // Endpoint ke inbox user (bukan room)
      const wsUrl = `${wss}${hostname}/api/user/${encodeURIComponent(username)}/inbox?room=${roomname}`;
      
      console.log('Connecting to:', wsUrl);
      currentWebSocket = new WebSocket(wsUrl);

      currentWebSocket.addEventListener('open', () => {
        console.log('WebSocket connected');
        // Kirim data awal
        currentWebSocket.send(JSON.stringify({
          type: 'init',
          name: username,
          status: modalStatus.value,
          about: modalAbout.value,
          avatar: avatarBase64,
          room: roomname
        }));
      });

      currentWebSocket.addEventListener('message', (event) => {
        const data = JSON.parse(event.data);
        handleWebSocketMessage(data);
      });

      currentWebSocket.addEventListener('close', () => {
        console.log('WebSocket disconnected, reconnecting...');
        setTimeout(connectWebSocket, 3000);
      });

      currentWebSocket.addEventListener('error', (err) => {
        console.error('WebSocket error:', err);
      });
    }

    function handleWebSocketMessage(data) {
      switch (data.type) {
        case 'user_list':
          updateUsersList(data.online, data.offline);
          break;
        case 'user_joined':
          addUserToList(data.user, 'online');
          break;
        case 'user_left':
          removeUserFromList(data.username);
          break;
        case 'status_update':
          updateUserStatus(data.username, data.status, data.about);
          break;
        default:
          console.log('Unknown message:', data);
      }
    }

    // ===== UPDATE USERS LIST =====
    function updateUsersList(online = [], offline = []) {
      onlineUsersList.innerHTML = '';
      offlineUsersList.innerHTML = '';

      online.forEach(user => {
        onlineUsersList.appendChild(createUserElement(user));
      });

      offline.forEach(user => {
        offlineUsersList.appendChild(createUserElement(user));
      });

      onlineCount.textContent = online.length;
    }

    function createUserElement(user) {
      const div = document.createElement('div');
      div.className = 'user-item';
      div.innerHTML = `
        <img class="user-avatar" src="${user.avatar || 'data:image/svg+xml,%3Csvg...%3E'}" alt="avatar">
        <div class="user-info">
          <div class="user-name">
            <span class="status-indicator status-${user.status}"></span>
            ${user.name}
          </div>
          <div class="user-status-text">${user.status}</div>
          <div class="user-about">${user.about || ''}</div>
        </div>
      `;
      return div;
    }

    function addUserToList(user, status) {
      // Implementasi nanti
    }

    function removeUserFromList(username) {
      // Implementasi nanti
    }

    function updateUserStatus(username, status, about) {
      // Implementasi nanti
    }

    // ===== MODAL SETTING 4 LAYER =====
    settingsBtn.addEventListener('click', () => {
      // Load current data
      modalName.value = username;
      modalAbout.value = localStorage.getItem('readtalk_about') || '';
      modalStatus.value = localStorage.getItem('readtalk_status') || 'online';
      modalEmail.value = localStorage.getItem('readtalk_email') || '';
      modalAvatarPreview.src = avatarBase64 || 'data:image/svg+xml,%3Csvg...%3E';
      updateCharCount();
      profileModal.classList.remove('hidden');
    });

    function closeModal() {
      profileModal.classList.add('hidden');
    }

    closeModalBtn.addEventListener('click', closeModal);
    cancelModal.addEventListener('click', closeModal);

    // Click outside modal to close
    profileModal.addEventListener('click', (e) => {
      if (e.target === profileModal) closeModal();
    });

    // ===== AVATAR UPLOAD DI MODAL =====
    changeAvatarBtn.addEventListener('click', () => {
      modalAvatarUpload.click();
    });

    modalAvatarUpload.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (ev) => {
          avatarBase64 = ev.target.result;
          modalAvatarPreview.src = avatarBase64;
          avatarImage.src = avatarBase64;
          avatarImage.style.display = 'block';
          avatarPlaceholder.style.display = 'none';
          localStorage.setItem('readtalk_avatar', avatarBase64);
        };
        reader.readAsDataURL(file);
      }
    });

    // ===== CHARACTER COUNTER =====
    modalName.addEventListener('input', () => {
      document.getElementById('modal-name-count').textContent = `${modalName.value.length}/32`;
    });

    modalAbout.addEventListener('input', () => {
      document.getElementById('modal-about-count').textContent = `${modalAbout.value.length}/150`;
    });

    function updateCharCount() {
      document.getElementById('modal-name-count').textContent = `${modalName.value.length}/32`;
      document.getElementById('modal-about-count').textContent = `${modalAbout.value.length}/150`;
    }

    // ===== SAVE PROFILE =====
    saveProfile.addEventListener('click', () => {
      username = modalName.value.trim() || username;
      const status = modalStatus.value;
      const about = modalAbout.value.trim();
      const email = modalEmail.value.trim();

      // Simpan ke localStorage
      localStorage.setItem('readtalk_username', username);
      localStorage.setItem('readtalk_status', status);
      localStorage.setItem('readtalk_about', about);
      if (email) localStorage.setItem('readtalk_email', email);

      // Update UI
      nameInput.value = username;
      if (currentWebSocket && currentWebSocket.readyState === WebSocket.OPEN) {
        currentWebSocket.send(JSON.stringify({
          type: 'update_profile',
          name: username,
          status: status,
          about: about,
          avatar: avatarBase64
        }));
      }

      closeModal();
    });

    // ===== START CHAT BUTTON (LAYER 4) =====
    startChatBtn.addEventListener('click', () => {
      const chatApiUrl = `https://chat.repolain.com?user=${encodeURIComponent(username)}&room=${roomname}&avatar=${encodeURIComponent(avatarBase64)}`;
      window.open(chatApiUrl, '_blank');
      // Atau bisa juga pake redirect di tab yang sama:
      // window.location.href = chatApiUrl;
    });

    // ===== AUTO RESTORE SESSION =====
    (function init() {
      const savedUser = localStorage.getItem('readtalk_username');
      const roomHash = window.location.hash.slice(1);
      if (savedUser && roomHash) {
        username = savedUser;
        roomname = roomHash;
        avatarBase64 = localStorage.getItem('readtalk_avatar') || '';
        nameInput.value = savedUser;
        roomNameInput.value = roomHash;
        roomNameInput.disabled = true;
        startRoomPanel();
      }
    })();
  </script>
</body>
</html>
