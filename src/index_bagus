}

#connection-status.offline {
  background-color: #f44336;
  transform: scaleX(1);
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

/* FORMS */
#room-form, #name-form {
